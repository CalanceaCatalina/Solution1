
@{
    ViewBag.Title = "Contacts";
}

<div class="container" align="center">
    <div style="text-align:center">
        <p><h2>Contact Us</h2></p>
    </div>
    <form>
        <p>
            <div class="col-md-6 form-line">
                <div class="form-group">
                    <label for="exampleInputUsername">Your name</label>
                    <input type="text" class="form-control" id="" placeholder=" Enter Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail">Email Address</label>
                    <input type="email" class="form-control" id="exampleInputEmail" placeholder=" Enter Email ">
                </div>
                <div class="form-group">
                    <label for="telephone">Mobile No.</label>
                    <input type="tel" class="form-control" id="telephone" placeholder=" Enter 9-digit mobile no.">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="description">Message</label>
                    <textarea class="form-control" id="description" placeholder="Enter Your Message"></textarea>
                </div>
                <div>
                    <button type="button" class="btn btn-light"><i class="fa fa-paper-plane" aria-hidden="true"></i>  Send Message</button>
                </div>
            </div>
        </p>
    </form>
</div>