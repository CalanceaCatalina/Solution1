@model IEnumerable<WebApplication1.Domain.Entities.PostEntity>
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div style="text-align:center">
        <div class="title-text">
            <p><b><i><h1>Catherine's Boutique</h1></i></b></p>
        </div>
        <div class="text2">
            <h2> It's always the little things those little gestures that matter the most.</h2>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <div class="row">
            @foreach (var post in Model)
            {
            <div class="col" style="text-align: center;">
                <h5><em><i>@post.Title</i></em></h5>
                <img src="@post.ImageUrl" class="img-thumbnail" style="width:100%; max-width:300px">
                <a href="/Home/Detail/@post.PostId" class="btn btn-light mt-2" style="margin-left:auto; margin-right:auto; display:block;">Details</a>
            </div>
            }
        </div>
    }
</div>